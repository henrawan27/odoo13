<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.actions.server" id="account_asset.action_account_aml_to_asset">
            <field name="name">Create Asset</field>
            <field name="model_id" ref="account.model_account_move_line"/>
            <field name="binding_model_id" ref="account.model_account_move_line" />
            <field name="state">code</field>
            <field name="code">
    if records:
        action = records.turn_as_asset()
            </field>
        </record>

        <record id="view_pick_asset_model_form" model="ir.ui.view">
            <field name="name">pick.asset.model.form</field>
            <field name="model">pick.asset.model</field>
            <field name="arch" type="xml">
                <form string="Asset Model">
                    <sheet>
                        <group>
                            <field name="account_id"/>
                            <field name="asset_model_id" options="{'no_create': True}"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_confirm" string="Confirm" type="object" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>