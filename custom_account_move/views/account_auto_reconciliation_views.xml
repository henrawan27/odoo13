<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_auto_reconcile_form" model="ir.ui.view">
            <field name="name">action.auto.reconcile.form</field>
            <field name="model">account.auto.reconciliation</field>
            <field name="arch" type="xml">
                <form string="Auto Reconciliation">
                    <sheet>
                        <field name="message" readonly="1" style="font-weight: bold;"/>
                    </sheet>
                    <footer>
                        <button name="action_auto_reconcile" type="object" class="oe_highlight" string="Reconcile"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_auto_reconcile_form" model="ir.actions.act_window">
            <field name="name">Auto Reconciliation</field>
            <field name="res_model">account.auto.reconciliation</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_auto_reconcile_form"/>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_action_auto_reconcile"
                  action="action_view_auto_reconcile_form"
                  name="Auto Reconcile"
                  parent="account.menu_finance_entries_actions"
                  sequence="100"
                  groups="base.group_no_one"
        />
    </data>
</odoo>